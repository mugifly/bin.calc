<?xml version="1.0" encoding="utf-8"?>
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tableLayout_baseinputs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:stretchColumns="0" >

            <TableRow
                android:id="@+id/tableRow_baseinput_dec"
                android:layout_width="match_parent"
                android:layout_height="50dp" >

                <EditText
                    android:id="@+id/editText_baseinput_dec"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_baseinput_default"
                    android:cursorVisible="false"
                    android:editable="true"
                    android:inputType="numberDecimal"
                    android:scrollbarStyle="outsideOverlay" >

                    <requestFocus />
                </EditText>

                <ImageButton
                    android:id="@+id/ImageButton_baseinput_bs_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/button_backspace"
                    android:background="@drawable/button_backspace_background" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow_baseinput_bin"
                android:layout_width="match_parent"
                android:layout_height="50dp" >
                
                <EditText
                    android:id="@+id/editText_baseinput_bin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_baseinput_default"
                    android:cursorVisible="false"
                    android:editable="true"
                    android:inputType="number" />

                <ImageButton
                    android:id="@+id/ImageButton_baseinput_bs_bin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/button_backspace"
                    android:background="@drawable/button_backspace_background" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow_baseinput_hex"
                android:layout_width="match_parent"
                android:layout_height="50dp" >

                <EditText
                    android:id="@+id/editText_baseinput_hex"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_baseinput_default"
                    android:cursorVisible="false"
                    android:editable="true"
                    android:inputType="number" />

                <ImageButton
                    android:id="@+id/ImageButton_baseinput_bs_hex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/button_backspace"
                    android:background="@drawable/button_backspace_background" />

            </TableRow>

        </TableLayout>
	