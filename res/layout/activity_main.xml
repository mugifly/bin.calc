	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:layout_marginTop="5dp"
	    android:stretchColumns="0,1,2,3,4,5" >
	    
	  <TableRow
	      android:id="@+id/keyTableRow0"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content" >

	       <Button
	           android:id="@+id/keyButtonA"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:background="@drawable/button"
	           android:text="A" />

	       <Button
	           android:id="@+id/keyButtonB"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:background="@drawable/button"
	           android:text="B" />

	       <Button
	           android:id="@+id/keyButtonC"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:background="@drawable/button"
	           android:text="C" />

	       <Button
	           android:id="@+id/keyButtonD"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:background="@drawable/button"
	           android:text="D" />

	       <Button
	           android:id="@+id/keyButtonE"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:background="@drawable/button"
	           android:text="E" />

	       <Button
	           android:id="@+id/keyButtonF"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:background="@drawable/button"
	           android:text="F" />

		</TableRow>
	</TableLayout>

