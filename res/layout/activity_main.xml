<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:stretchColumns="1">
		
	    <TableRow
	        android:id="@+id/tableRow_basetype_dec"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <ToggleButton
	            android:id="@+id/toggle_basetype_dec"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:background="@drawable/toggle_basetype"
	            android:textOn="@string/baseMode_dec"
	            android:textOff="@string/baseMode_dec" />
	
	        <EditText
	            android:id="@+id/editText_basetype_dec"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@drawable/edittext"
	            android:inputType="numberDecimal" />
	
	    </TableRow>
	    
	    <TableRow
	        android:id="@+id/tableRow_basetype_bin"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <ToggleButton
	            android:id="@+id/toggle_basetype_bin"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:background="@drawable/toggle_basetype"
	            android:textOn="@string/baseMode_bin"
	            android:textOff="@string/baseMode_bin" />
	
	        <EditText
	            android:id="@+id/editText_basetype_bin"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@drawable/edittext"
	            android:inputType="number" />
	
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow_basetype_hex"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <ToggleButton
	            android:id="@+id/toggle_basetype_hex"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:background="@drawable/toggle_basetype"
	            android:textOn="@string/baseMode_hex"
	            android:textOff="@string/baseMode_hex" />
	
	        <EditText
	            android:id="@+id/editText_basetype_hex"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@drawable/edittext"
	            android:inputType="number" />
	
	    </TableRow>
	
	</TableLayout>
	
	<!--Keypad_-->

	<TableLayout
